<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ofir.fitme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_fit_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GoalDetailsActivity"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GoalsActivity"
            android:label="@string/title_activity_goals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".workoutDetailsActivity"
            android:label="@string/title_activity_workout_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".addWorkoutActivity" />
        <activity
            android:name=".WorkoutsActivity"
            android:label="@string/title_activity_workouts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MealDetailsActivity"
            android:label="@string/title_activity_meal_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MealsActivity"
            android:label="Meals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChangeProfileActivity" />
        <activity android:name=".StartProfileActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>